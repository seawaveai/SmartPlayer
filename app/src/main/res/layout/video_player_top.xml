<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/video_player_linear_top"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--系统栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_video_system_status"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--视频名称-->
        <TextView
            android:id="@+id/video_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="opp-2"/>
        <!--电量-->
        <ImageView
            android:id="@+id/video_player_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_battery_0"/>
        <!--系统时间-->
        <TextView
            android:id="@+id/video_player_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00:30"/>
    </LinearLayout>
    <!--音量调节栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_video_volume_control"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--静音按钮-->
        <ImageView
            android:id="@+id/video_player_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_volume_mute_selector"/>
        <!--音量条-->
        <SeekBar
            android:id="@+id/video_player_volume_sk"
            style="@android:style/Widget.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="6dp"
            android:minHeight="6dp"
            android:progress="0"
            android:layout_marginRight="6dp"
            android:progressDrawable="@drawable/video_player_seekbar_progressdrawabale"
            android:thumb="@drawable/video_progress_thumb"
            android:thumbOffset="0dp"/>
    </LinearLayout>
</LinearLayout>